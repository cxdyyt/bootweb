<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="my.springboot.start.bootstudy.mapper.DepartmentsMapper">

    <resultMap id="BaseResultMap" type="my.springboot.start.bootstudy.entity.Departments">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,parent_id
    </sql>
    <insert id="insertSelective">
        insert into departments
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="parentId != null">parent_id,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id,jdbcType=INTEGER},</if>
            <if test="name != null">#{name,jdbcType=VARCHAR},</if>
            <if test="parentId != null">#{parentId,jdbcType=INTEGER},</if>
        </trim>
    </insert>
    <select id="getAllByName" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from departments
        where
        name = #{name,jdbcType=VARCHAR}
    </select>
    <select id="getByIdAndName" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from departments
        where
        id = #{id,jdbcType=NUMERIC}
        AND name = #{name,jdbcType=VARCHAR}
    </select>
    <update id="updateSelective">
        update departments
        <set>
            <if test="name != null">name=#{name,jdbcType=VARCHAR},</if>
            <if test="parentId != null">parent_id=#{parentId,jdbcType=NUMERIC},</if>
        </set>
        where id = #{id,jdbcType=NUMERIC}
    </update>
</mapper>
